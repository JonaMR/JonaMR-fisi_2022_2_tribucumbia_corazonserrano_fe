<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Boucher">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Pago"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="24sp"
            android:textColor="#131315"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
    />

    <ImageView
            android:src="@drawable/pagarintro"
            android:layout_width="197dp"
            android:layout_height="251dp"
            android:id="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="50dp"

            android:layout_marginLeft="101dp" android:layout_marginStart="101dp"/>


    <EditText
            android:id="@+id/txtNumeroVoucher"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFecha"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/numeroVoucher"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="46dp" android:layout_marginTop="-1dp"/>
    <TextView
            android:id="@+id/numeroVoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fecha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:text="Numero Voucher"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="17dp"
            android:layout_marginTop="-1dp" android:layout_marginStart="17dp"/>
    <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagenBoucher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:layout_marginRight="48dp"
            android:paddingLeft="8dp"
            android:text="Fecha Pago"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="17dp"
            android:layout_marginTop="0dp" android:layout_marginStart="17dp"/>
    <EditText
            android:id="@+id/txtFecha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtImagenBoucher"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/fecha"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"
            android:layout_marginLeft="82dp" android:layout_marginTop="-1dp"/>
    <EditText
            android:id="@+id/txtImagenBoucher"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/imagenBoucher"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"
            android:layout_marginLeft="59dp" android:layout_marginTop="37dp"/>
    <TextView
            android:id="@+id/imagenBoucher"
            android:text="Cargar Imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginRight="48dp"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="17dp" android:layout_marginTop="37dp" android:layout_marginStart="17dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPagar"
            android:layout_below="@+id/txtNumeroVoucher"
            android:textSize="18sp"
            android:text="Guardar Datos"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="21dp" android:background="#FFFFFF" android:backgroundTint="#8BC34A"/>

</RelativeLayout>